<UserControl x:Class="MVVM_Examples.View.MainView.MainViewDefinition"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVVM_Examples.View.MainView"
      xmlns:wrapper ="clr-namespace:MVVM_Examples.View.View_DoubleNesting"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <local:MainViewViewModel />
    </UserControl.DataContext>

    <Grid x:Name="MainViewGrid"
          HorizontalAlignment="Left"
          Margin="10,10,0,0"
          VerticalAlignment="Top">
        <DataGrid ItemsSource="{Binding DBObjectList}"/>
    </Grid>
</UserControl>
